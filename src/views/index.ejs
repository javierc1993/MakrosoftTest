<%- include('partials/__header.ejs') %>

<div class="container">

    <div class="row">
      <!--FORM-->
      <div class="col-md-5">
        <div class="card">
          <div class="card-body">
            <form action="/add" method="post">
              <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="username" value="pedro">
              </div>
              <div class="form-group">
                <textarea class="form-control" name="money" cols="80" value="80"
                  placeholder="Money"
                  ></textarea>
              </div>
              <button class="btn btn-primary" type="submit">
                Add
              </button>
            </form>
          </div>
        </div>
      </div>
 
      <!-- LIST -->
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>NÂ°</th>
              <th>Title</th>
              <th>Description</th>
              <th>Operations</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i < tasks.length; i++) { %>
              <tr>
                <td><%= i + 1%></td>
                <td><strong><%= tasks[i].username %></strong></td>
                <td><%= tasks[i].money %></td>
                <td>
                  <a
                    class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                    href="/turn/<%= tasks[i]._id %>">Done</a>
                  <a href="/delete/<%= tasks[i]._id %>"
                    class="btn btn-danger">
                    Delete
                  </a>
                  <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">
                    Edit
                  </a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
  
      </div>
    </div>
  
  </div>


    <%- include('partials/__footer.ejs') %>